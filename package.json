{
  "name": "gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "prisma:push:user": "prisma db push --schema ./prisma/users/users.schema.prisma",
    "prisma:push": "npm prisma:push:users",
    "prisma:gen:users": "prisma generate --schema ./apps/users/prisma/users.schema.prisma",
    "prisma:gen:ping": "prisma generate --schema ./apps/ping/prisma/ping.schema.prisma",
    "prisma:gen:activity": "prisma generate --schema ./apps/activity/prisma/activity.schema.prisma",
    "prisma:gen": "npm run prisma:gen:users && npm run prisma:gen:ping && npm run prisma:gen:activity",
    "generate-typings:user": "ts-node ./libs/generate-typings/user.ts",
    "generate-typings:ping": "ts-node ./libs/generate-typings/ping.ts",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/gateway": "^2.5.3",
    "@apollo/server": "^4.9.2",
    "@apollo/subgraph": "^2.5.3",
    "@aws-sdk/client-s3": "^3.460.0",
    "@aws-sdk/s3-request-presigner": "^3.460.0",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/terminus": "^10.2.0",
    "@prisma/client": "^5.7.0",
    "@sapphire/snowflake": "^3.5.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "bson": "^6.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.2",
    "joi": "^17.11.0",
    "jwks-rsa": "^3.1.0",
    "neo4j-driver": "^5.14.0",
    "passport": "^0.7.0",
    "passport-auth0": "^1.4.4",
    "passport-jwt": "^4.0.1",
    "prisma-query-log": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@apollo/rover": "^0.18.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@neo4j/neo4j(|/.*)$": "<rootDir>/libs/neo4j/src/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1"
    }
  }
}
