// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../libs/prisma/__generated__/client/users"
}

datasource db {
  provider = "mongodb"
  url      = env("USER_DB_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  username String   @unique
  name     Name
  role     Role     @default(USER)
  picture  String?
  picks    String[]
}

type Name {
  firstName  String
  middleName String?
  lastName   String
}

enum Role {
  USER
  ADMIN
  ACTIVITY_OWNER
  FORUM_MODERATOR
}
