generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/@prisma/db-ping"
}

datasource db {
  provider = "mongodb"
  url      = env("PING_DB_URL")
}

model Ping {
  id          String   @id @map("_id")
  title       String
  description String?
  // createdAt   DateTime @default(now())
  url         String?
  picks       String[]
  userID      String   @map("user") @db.ObjectId
  geometry    GeoJson
  radius      Float?   @default(200)
  media       Media[]
}

type Media {
  key  String
  type String
}

enum GeoTypes {
  Point
  LineStringpa
  Polygon
  MultiPoint
  MultiLineString
  MultiPolygon
}

type GeoJson {
  type        GeoTypes
  coordinates Float[]
}
