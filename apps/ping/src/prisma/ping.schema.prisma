generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/@prisma/db-ping"
}

datasource db {
  provider = "mongodb"
  url      = env("PING_DB_URL")
}

model Ping {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  createdAt   DateTime @default(now())
  url         String?
  picks       String[]
  userID      String   @map("user") @db.ObjectId
  geometry    GeoJson
  radius      Int      @default(200)
}

enum GeoTypes {
  Point
  LineString
  Polygon
  MultiPoint
  MultiLineString
  MultiPolygon
}

type GeoJson {
  type        GeoTypes
  coordinates Float[]
}
